<!DOCTYPE html>
<html>
  <head>
    <title>ShippedApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <p class="logo"> ShipIt Inc. </p>
    </header>
    <div class="buffer"></div>
    <div>
      <div class="home_buttons">
         <% if current_shipper %>
          <div class="inline btn"> <%= link_to("Log Out", destroy_shipper_session_path, method: :delete) %> </div>
          <div class="inline btn"> <%= link_to("Dashboard", dashboard_index_path) %> </div>
         <% end %>
      </div>

      <%= yield %>
    </div>

  </body>
</html>
